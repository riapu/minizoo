<p id="notice"><%= notice %></p>

<h1>Articulos</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articulos.each do |articulo| %>
      <tr>
        <td><%= articulo.titulo %></td>
        <td><%= articulo.descripcion %></td>
        <td><%= image_tag(articulo.foto) %></td>
        <td><%= link_to 'Ver', articulo, :class=>"btn btn-default" %></td>
        <td><%= link_to 'Editar', edit_articulo_path(articulo), :class=>"btn btn-default" %></td>
        <td><%= link_to 'Eliminar', articulo, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"btn btn-default"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear nuevo articulo', new_articulo_path, class: "btn btn-success" %>

<%= will_paginate @articulo %>