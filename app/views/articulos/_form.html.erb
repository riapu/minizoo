    <%= form.label "Cuerpo del Articulo" %>
    <%= form.text_area :descripcion, id: :articulo_descripcion, :class=>"form-control"%>
  </div>

  <div class="field">
    <%= form.label "Subir una foto" %><br>
    <%= form.file_field :foto %>
  </div>
