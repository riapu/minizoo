
<%= form_with(model: ficha_medica, local: true) do |form| %>
  <% if ficha_medica.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ficha_medica.errors.count, "error") %> prohibited this ficha_medica from being saved:</h2>

      <ul>
      <% ficha_medica.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!-- Script que control select2 para search list -->
<script type="text/javascript">
$(document).ready(function() {
    $('.js-example-basic-single').select2();
});</script>
<!-- End//Script que control select2 para search list -->

 <div class="input-group">
    <span class="input-group-addon" id="sizing-addon2">
    <%= form.label "Animal" %>
    </span>
      <%= form.collection_select(:animal_id, Animal.all, :id, :nombre_comun, {}, {:class=>"js-example-basic-single js-states form-control", :style=>"width: 47%"}) %>
  </div>
<br>
  
  <select class="form-control " data-live-search="true" id="ficha_medica_estado_salud" name="ficha_medica[estado_salud]" style="width: 50%">
    <option selected >Estado de salud</option>
    <option value="Leve">Leve</option>
    <option value="Grabe">Grabe</option>
    <option value="Muy Grabe">Muy Grabe</option>
  </select>

<br>

  <div class="input-group">
    <span class="input-group-addon" id="sizing-addon2">
    <%= form.label "Enfermedad" %></span>
    <%= form.text_field :enfermedad, id: :ficha_medica_enfermedad,:class=>"form-control", :placeholder=>"Fiebre Amarilla", :style=>"width: 30%" %>
  </div>
<br>
  <div class="input-group">
    <span class="input-group-addon" id="sizing-addon2">
    <%= form.label :dolencia %>
    </span>
    <%= form.text_area :dolencia, id: :ficha_medica_dolencia, :class=>"form-control", :placeholder=>"Dolores que cuenta el paciente" %>
  </div>
<br>
  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_area :descripcion, id: :ficha_medica_descripcion , :class=>"form-control", :rows=>"5", :placeholder=>"Detalles de la observación y comentarios sobre el  diagnostico"%>
  </div>
<br>
 
  <div class="field">
    <%= form.label "Subir Fotos" %><br>
    <%= form.file_field :archivos %>
  </div>
<br>
  <div class="field">
    <%= form.label "Subir Audios" %><br>
    <%= form.file_field :audio %>
    <small id="fileHelp" class="form-text text-muted">Solo se admiten audios con extesión .mp3</small>
  </div>
<br>
  <div class="form-control-file">
    <label for="exampleInputFile">Video</label>
    <input id="ficha_medica_video" type="file" name="ficha_medica[video]">
    <small id="fileHelp" class="form-text text-muted">Solo se admiten videos con extesión .mp4</small>
  </div>
  
<br>
  <div class="field">
    <%= form.label :internacion %>
    <%= form.check_box :internacion, id: :ficha_medica_internacion %>
  </div>
<br>

  <div class="actions">
    <%= form.submit "Guardar Ficha" , :class=>"btn btn-nuevo" %>
    <%= link_to 'Volver', ficha_medicas_path, :class=>"btn btn-default" %>

  </div>


<% end %>
