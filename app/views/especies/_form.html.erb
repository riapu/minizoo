<%= form_with(model: especie, local: true) do |form| %>
  <% if especie.errors.any? %>
    <div class="alert alert-danger" role="alert">
      Se ha encontrado  <%= pluralize(especie.errors.count, "error") %> al intentar crear una nueva especie

      <ul>
      <% especie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group">
    <span class="input-group-addon" id="sizing-addon2"><%= form.label :nombre %></span>
    <%= form.text_field :nombre, id: :especie_nombre, :class=>"form-control", :placeholder=>"MamÃ­feros" %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit "Guardar", :class=>"btn btn-nuevo" %> 
    <%= link_to 'Volver', especies_path, :class=>"btn btn-default" %>
  </div>
<% end %>
