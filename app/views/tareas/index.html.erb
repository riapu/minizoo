  <h3>Alertas diarias</h3>
  <hr></hr>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Fecha / Hora</th>
      <th>Animal</th>
      <th>Diagnostico</th>
      <th>Medicamento</th>
      <th>Finalizar tratamiento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tareas.each do |tarea| %>
      <tr>
